<section id="blog_page_cavalla">
  <section class="row m-auto w-100">
    <div class="col col-12 col-md-9">
      <section class="container">
      {% if 'Off' in content.field_cavalla_blog_hero_img_hide[0] %}
        <!--Hero Image-->
        <section class="hero_image">
        {%  if true in content.field_cavalla_blog_hero_image[0] %}
          <img  class="background_image" src="{{content.field_cavalla_blog_hero_image[0]}}" alt="Photo for {{node.title.value}}" />
          <div class="marketing_background_text center_text">
            <div class="container">
              <h1 class="title-header">{{node.title.value}}</h1>
            </div>
          </div>
        {% endif %}
        </section>
        <!--Breadcrumb-->
        <section class="breadcrumb_section p-3 mb-5">
          <div class="container">
            <nav aria-label="breadcrumb" class="breadcrumb">
              {{ breadcrumb }}
            </nav>
          </div>
        </section>
        <!--Breadcrumb-->
      {% endif %}
        {{ content.field_cavalla_blog_widgets }}
        {{ content.field_suggested_post_feeds_foot }}
        <section class="sticky-footer">
          <section class="blog_author my-4" aria="Blog Author">
            {{ content.field_cavalla_blog_author }}
          </section>
          <section class="blog_comments">
            <section class="blog_comment_feed">

              {{ content.field_cavalla_blog_comments }}
            </section>
          </section>
        </section>
      </section>
    </div>
    <div class="col col-12 col-md-3 blog_post_feed mx-auto">
      {{ content.field_cavalla_blog_sp_feeds }}
    </div>
  </section>
</section>