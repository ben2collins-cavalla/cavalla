<section class="product_feed_bundle" >
    <section class="container">
        <section class="product_feed_bundle_introduction">
            <h1>{{ content.field_cavalla_pf_header }}</h1>
            <p class="lead-in">{{ content.field_cavalla_pf_text }}</p>
        </section>
        <section class="card-deck my-4">
        {{ product_feed }}
        </section>
        <section class="hyperlink">
            {%  if true in content.field_cavalla_pf_hyperlink[0] %}
            {% for i in 0..content.field_cavalla_pf_hyperlink|length %}
                {% if content.field_cavalla_pf_hyperlink[i] is not null %}
                <a class="btn btn-dark" href="{{ content.field_cavalla_pf_hyperlink[i]['#url'] }}">{{ content.field_cavalla_pf_hyperlink[i]['#title'] }}&nbsp;<i class="fa fa-arrow-circle-right"></i></a>
                {% endif %}
            {% endfor %}
            {% endif %}
        </section>
    </section>
</section>